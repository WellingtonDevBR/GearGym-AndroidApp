<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.gamezzar.geargymtest.feature.login.LoginFragment"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.gamezzar.geargymtest.feature.login.RegisterFragment"
        tools:layout="@layout/register_fragment">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />

        <action
            android:id="@+id/action_registerFragment_to_HomeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.gamezzar.geargymtest.feature.home.HomeFragment"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_workoutFragment"
            app:destination="@id/workoutFragment" />
    </fragment>

    <fragment
        android:id="@+id/workoutFragment"
        android:name="com.gamezzar.geargymtest.feature.workout.home.WorkoutFragment"
        android:label="Workout Planning and Tracking"
        tools:layout="@layout/workout_fragment">
        <action
            android:id="@+id/action_workoutFragment_to_createWorkoutFragment"
            app:destination="@id/createWorkoutFragment" />

        <action
            android:id="@+id/action_workoutFragment_to_workoutListFragment"
            app:destination="@id/workoutListFragment" />
        <action
            android:id="@+id/action_workoutFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/createWorkoutFragment"
        android:name="com.gamezzar.geargymtest.feature.workout.create.NewWorkoutFragment"
        android:label="New Workout"
        tools:layout="@layout/new_workout_fragment">
        <action
            android:id="@+id/action_createWorkoutFragment_to_newWorkoutListFragment"
            app:destination="@id/newWorkoutListFragment" />

        <action
            android:id="@+id/action_createWorkoutFragment_to_workoutListFragment"
            app:destination="@id/workoutListFragment" />
    </fragment>

    <fragment
        android:id="@+id/newWorkoutListFragment"
        android:name="com.gamezzar.geargymtest.feature.workout.create.NewWorkoutListFragment"
        android:label="New Workout"
        tools:layout="@layout/new_workout_list_fragment">
        <action
            android:id="@+id/action_newWorkoutListFragment_to_createWorkoutFragment"
            app:destination="@id/createWorkoutFragment" />
    </fragment>

    <fragment
        android:id="@+id/workoutListFragment"
        android:name="com.gamezzar.geargymtest.feature.workout.list.WorkoutListFragment"
        android:label="Your Workout"
        tools:layout="@layout/workout_list_fragment">
        <action
            android:id="@+id/action_workoutListFragment_to_workoutFragment"
            app:destination="@id/workoutFragment" />
        <action
            android:id="@+id/action_workoutListFragment_to_createWorkoutFragment"
            app:destination="@id/createWorkoutFragment" />

    </fragment>
</navigation>